<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg2"
    tools:context=".MainActivity">

    <TextView
        android:fontFamily="@font/bangers"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35dp"
        android:background="@color/black"
        android:text="Movie Buddy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bangers"
        android:text="Add a movie!"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp" />

    <androidx.appcompat.widget.AppCompatEditText
        android:fontFamily="@font/bangers"
        android:id="@+id/edit_text_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:hint="Id"
        android:textColorHint="@color/black" />

    <androidx.appcompat.widget.AppCompatEditText
        android:textColorHint="@color/black"
        android:layout_marginTop="15dp"
        android:id="@+id/edit_text_title"
        android:hint="Title"
        android:fontFamily="@font/bangers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_directors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/bangers"
        android:hint="directors"
        android:textColorHint="@color/black" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_casts"
        android:fontFamily="@font/bangers"
        android:textColorHint="@color/black"
        android:layout_marginTop="15dp"
        android:hint="Cast's"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edit_text_releaseDate"
        android:fontFamily="@font/bangers"
        android:textColorHint="@color/black"
        android:layout_marginTop="15dp"
        android:hint="Release Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <Button
        android:id="@+id/poster"
        android:layout_marginTop="15dp"
        android:text="UPLOAD POSTER"
        android:paddingTop="10dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/bangers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/button1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:fontFamily="@font/bangers"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/button2"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#000000"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Cancel"
            app:layout_constraintBottom_toBottomOf="parent"
            android:fontFamily="@font/bangers"
            app:layout_constraintEnd_toStartOf="@id/button3"
            android:backgroundTint="#000000"
            app:layout_constraintStart_toEndOf="@id/button1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/button3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:backgroundTint="#000000"
            android:fontFamily="@font/bangers"
            android:text="View Records"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button2"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imgGallery"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/cinema1"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/bangers"
        android:text="cinema"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.appcompat.widget.LinearLayoutCompat>